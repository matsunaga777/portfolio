<div id="title">
    <div>
        <p><%= @article.created_at.strftime('%Y/%m/%d') %> / 書いた人:<%= @article.user.email%></p>
        <h1><%= @article.title %></h1>
    </div>
</div>

<div id="article_wrap">

    <div id="content">
      <%= @article.body%>
    </div>


    <div id="sidebar">

        <h2>★PV数ランキング</h2>
        <ul><% @ranking_articles.each do |article| %>
              <%= link_to article do %>
                <li>
                  <strong><%= article.title%></strong>
                  <span>(<%= REDIS.zscore("ranking", article.id).to_i %>PV)</span>
                </li>
              <% end%>
            <% end %>
        </ul>
    </div>
    <div class="clear"></div>
</div>

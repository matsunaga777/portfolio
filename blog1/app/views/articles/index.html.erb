<div id="main">
    <%= image_tag 'main-img.jpg'%>
</div>


<div id="article_wrap">

    <div id="article_list">
      <% @articles.each do |article| %>
        <%= link_to article do %>
          <div>
            <h2><%= article.title %></h2>
            <p><%= article.created_at.strftime('%Y/%m/%d') %></p>
            <% if user_signed_in? %>
              <%= link_to '編集',edit_article_path(article) %>
              <%= link_to '削除',article_path(article),method: :delete, data: {confirm:'削除してもよろしいですか？' } %>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div id="sidebar">

        <h2>★PV数ランキング</h2>
        <ul><% @ranking_articles.each do |article| %>
              <%= link_to article do %>
                <li>
                  <strong><%= article.title%></strong>
                  <span>(<%= REDIS.zscore("ranking", article.id).to_i %>PV)</span>
                </li>
              <% end%>
            <% end %>
        </ul>
    </div>
    <div class="clear"></div>
</div>>
